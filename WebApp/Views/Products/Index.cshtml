@model IEnumerable<Data.Model.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Продукти</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добави нов продукт</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">
                    <i class="fa-solid fa-plus"></i>

                    Редактирай
                </a> |
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Id">Детайли</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Изтрий</a>
            </td>
        </tr>
}
    </tbody>
</table>
